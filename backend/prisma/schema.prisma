generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id     String @id @default(cuid())
  name   String
  email  String @unique
  avatar String? @default("")
  clerkId String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}
